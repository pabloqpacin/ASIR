
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

<xs:element name="fecha" type="tipoFecha"/>

<xs:simpleType name="tipoFecha">
    <!-- not INT but STRING-->
    <xs:restriction base="xs:string">
        <xs:pattern value="([0-2][0-9]|3[0-1])/(0[1-9]|1[0-2])/([1-2][0-9]{3})"/>

    </xs:restriction>
</xs:simpleType>


</xs:schema>